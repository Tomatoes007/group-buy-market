<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.infrastructure.dao.IGroupBuyDiscountDao">

    <resultMap id="BaseResultMap" type="org.example.infrastructure.dao.po.GroupBuyDiscount">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="discount_id" property="discountId" jdbcType="INTEGER"/>
        <result column="discount_name" property="discountName" jdbcType="VARCHAR"/>
        <result column="discount_desc" property="discountDesc" jdbcType="VARCHAR"/>
        <result column="discount_type" property="discountType" jdbcType="TINYINT"/>
        <result column="market_plan" property="marketPlan" jdbcType="VARCHAR"/>
        <result column="market_expr" property="marketExpr" jdbcType="VARCHAR"/>
        <result column="tag_id" property="tagId" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询所有折扣信息 -->
    <select id="queryAll" resultMap="BaseResultMap">
        SELECT id, discount_id, discount_name, discount_desc, discount_type, market_plan, market_expr, tag_id, create_time, update_time
        FROM group_buy_discount
    </select>

    <select id="queryGroupBuyDiscountById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select discount_id, discount_name, discount_desc, discount_type,
               market_plan, market_expr, tag_id
        from group_buy_discount
        where discount_id = #{discountId}
    </select>

</mapper>